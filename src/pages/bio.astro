---
import '../styles/globals.css';
import Mach5Header from '../components/Mach5Header.astro';
import SiteFooter from '../components/SiteFooter.astro';
import { ClientRouter } from 'astro:transitions';

const bandDescriptionTitle = 'Mach 5: The Ultimate High-Octane Rock Experience';
const bandDescription = [
    'Mach 5, with an edgy appearance and a sound built on pure power, delivers full-throttle showmanship. More than just a band, Mach 5 creates a true rock experience with striking visuals, engaging delivery, and dynamic live energy that keeps crowds locked in.',
    'With nonstop momentum, Mach 5 moves seamlessly from one song to the next with precision and intensity. Every set is designed to keep the dance floor buzzing from first chord to final encore.'
];

const members = [
    {
        name: 'Lanae Donovan',
        role: 'Lead Vocals, Backing Vocals',
        image: '/images/bio/lanaebio.webp',
        bio: 'Lanae has been a fixture in the music scene for over 2 decades, making her presence known as a powerhouse vocalist in the Austin area. Her dynamic stage presence combined with her wide vocal range makes her the unforgettable voice of MACH 5.'
    },
    {
        name: 'Joe "G" Giordino',
        role: 'Bass, Lead/Backing Vocals',
        image: '/images/bio/joebio.webp',
        bio: '"Joe G.", an ultimate rock bassist, has moved audiences nationwide for decades, providing powerful low-end that propels full-throttle sound. Classically trained from age eleven, Joe G. has recorded and toured alongside Steve Walsh and Phil Ehart of Kansas, Jim Peterik (Survivor), and Pat Marchino of Pat Travers and Ted Nugent. He has shared the stage with REO Speedwagon, Foghat, Molly Hatchet, Atlanta Rhythm Section, and Warrant.'
    },
    {
        name: 'Chuck Imperato',
        role: 'Guitars, Vocals',
        image: '/images/bio/chuckbio.webp',
        bio: 'Chuck began playing at the ripe old age of 32 and quickly developed an insatiable passion for guitar. He has played in Austin-area cover bands since 2011 and brings his own unique style and stage energy to MACH 5.'
    },
    {
        name: 'Mark "Byrdawg" Dillon',
        role: 'Keyboards, Vocals',
        image: '/images/bio/bdbio.webp',
        bio: 'Byrdawg was born in New Orleans and has immersed himself in becoming a complete artist, honing his skills in graphic arts design, keys, vocals, producing, and songwriting. Performing for over four decades, and in Austin since relocating after Hurricane Katrina, Byrdawg brings signature harmonies and depth to the MACH 5 sound.'
    },
    {
        name: 'Randy "Bam Bam" Erwin',
        role: 'Drums',
        image: '/images/bio/randybio.webp',
        bio: 'The man who needs no introduction, Bam is the heartbeat of MACH 5 and a staple of the Austin music scene for over two decades. From top bands like LC Rocks and Rock Hard to MACH 5, his power and precision drive every set.'
    }
];
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="Meet Mach 5: the full-throttle five-piece high-energy Austin rock cover band." />
        <title>Mach 5 | Bio</title>
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <ClientRouter />
    </head>
    <body class="m5-bio-body">
        <div class="m5-bio-page">
            <Mach5Header />
            <div class="m5-shell">
                <header class="m5-bio-hero-grid">
                    <figure class="m5-bio-hero-image m5-card">
                        <img src="/images/hero/hero3.webp" alt="Mach 5 band promo photo" loading="eager" decoding="async" />
                    </figure>
                    <section class="m5-bio-copy m5-card">
                        <p class="m5-bio-tag">Catch us if you can!</p>
                        <h2>{bandDescriptionTitle}</h2>
                        {bandDescription.map((paragraph) => <p>{paragraph}</p>)}
                        <div class="m5-bio-chips">
                            <span>Austin, TX</span>
                            <span>Clubs + Private Events</span>
                            <span>Corporate</span>
                            <span>70s / 80s / 90s / 00s Rock</span>
                        </div>
                    </section>
                </header>

                <section class="m5-section">
                    <h2>Meet the Band</h2>
                    <p class="m5-band-sub">High-octane musicianship. Big hooks. Tight transitions.</p>
                    <div class="m5-member-grid">
                        {
                            members.map((member) => (
                                <article class="m5-member-card m5-card">
                                    <figure>
                                        <img src={member.image} alt={member.name} loading="lazy" decoding="async" />
                                    </figure>
                                    <div class="m5-member-copy">
                                        <h3>{member.name}</h3>
                                        <p class="m5-member-role">{member.role}</p>
                                        <p>{member.bio}</p>
                                    </div>
                                </article>
                            ))
                        }
                    </div>
                </section>
            </div>
            <SiteFooter />
        </div>
    </body>
</html>

<style>
    .m5-bio-body {
        margin: 0;
        color: #f5f7fb;
        font-family: 'Inter Variable', ui-sans-serif, system-ui, sans-serif;
        background: #02050f;
    }
    .m5-bio-page {
        min-height: 100vh;
        background: radial-gradient(120% 120% at 50% 0%, #0d1222 0%, #02050f 58%, #01030a 100%);
        padding-bottom: 2.5rem;
    }
    .m5-shell {
        width: min(1200px, 100% - 3.25rem);
        margin-inline: auto;
    }
    .m5-card {
        background: linear-gradient(180deg, rgb(11 14 30 / 96%) 0%, rgb(9 12 23 / 94%) 100%);
        border: 1px solid rgb(63 72 101 / 36%);
        border-radius: 1.1rem;
        box-shadow: 0 14px 34px rgb(2 4 12 / 30%);
    }
    .m5-bio-hero-grid {
        margin-top: 0.9rem;
        display: grid;
        grid-template-columns: minmax(0, 1fr) minmax(0, 1fr);
        gap: clamp(1rem, 2.6vw, 2.2rem);
        align-items: stretch;
    }
    .m5-bio-hero-image {
        margin: 0;
        background: #060a13;
        display: grid;
        place-items: center;
        min-height: clamp(320px, 36vw, 520px);
        height: 100%;
        overflow: hidden;
    }
    .m5-bio-hero-image img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        object-position: center;
    }
    .m5-bio-copy {
        padding: clamp(1.3rem, 1.8vw, 2.1rem) clamp(1.2rem, 1.8vw, 2.2rem) clamp(1.5rem, 1.9vw, 2.3rem);
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .m5-bio-copy h2 {
        margin: 0;
        font-size: clamp(1.45rem, 1.2rem + 0.6vw, 2rem);
        line-height: 1.25;
    }
    .m5-bio-tag {
        margin: 0.45rem 0 0.7rem;
        font-size: clamp(2rem, 1.5rem + 1.8vw, 3.2rem);
        color: #ffffff;
        font-weight: 900;
        letter-spacing: 0.04em;
        text-transform: uppercase;
        font-family: 'Impact', 'Arial Black', 'Inter Variable', ui-sans-serif, system-ui, sans-serif;
        transform: skewX(-10deg);
        display: inline-block;
        line-height: 0.92;
        text-shadow:
            -2px -2px 0 #0b0d12,
            2px -2px 0 #0b0d12,
            -2px 2px 0 #0b0d12,
            2px 2px 0 #0b0d12,
            0 4px 10px rgb(0 0 0 / 45%);
    }
    .m5-bio-copy p {
        margin: 0.55rem 0 0;
        font-size: clamp(1.04rem, 0.98rem + 0.22vw, 1.18rem);
        line-height: 1.5;
        color: rgb(233 236 246 / 92%);
        max-width: 62ch;
    }
    .m5-bio-chips {
        margin-top: 0.95rem;
        display: flex;
        flex-wrap: wrap;
        gap: 0.45rem;
    }
    .m5-bio-chips span {
        border: 1px solid rgb(255 255 255 / 20%);
        border-radius: 0.55rem;
        background: rgb(10 14 26 / 72%);
        color: rgb(236 240 249 / 94%);
        padding: 0.35rem 0.58rem;
        font-size: 0.88rem;
        font-weight: 650;
    }
    .m5-section {
        margin-top: 1.35rem;
    }
    .m5-section h2 {
        margin: 0;
        font-size: clamp(2rem, 1.6rem + 1vw, 3rem);
    }
    .m5-band-sub {
        margin: 0.4rem 0 0;
        color: rgb(228 232 244 / 82%);
        font-size: clamp(1.02rem, 0.96rem + 0.2vw, 1.14rem);
    }
    .m5-member-grid {
        margin-top: 0.8rem;
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 0.85rem;
        align-items: start;
    }
    .m5-member-card {
        overflow: hidden;
        display: grid;
        grid-template-columns: 220px minmax(0, 1fr);
        align-items: stretch;
    }
    .m5-member-card figure {
        margin: 0;
        overflow: hidden;
        border-right: 1px solid rgb(255 255 255 / 12%);
        background: #050913;
        display: grid;
        place-items: center;
    }
    .m5-member-card img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        object-position: center top;
    }
    .m5-member-copy {
        padding: 0.85rem 0.95rem 0.9rem;
    }
    .m5-member-copy h3 {
        margin: 0;
        font-size: clamp(1.25rem, 1.1rem + 0.4vw, 1.55rem);
        line-height: 1.2;
    }
    .m5-member-role {
        margin: 0.3rem 0 0;
        color: #ff3f4b;
        text-transform: uppercase;
        letter-spacing: 0.04em;
        font-size: 0.85rem;
        font-weight: 700;
    }
    .m5-member-copy p {
        margin: 0.55rem 0 0;
        color: rgb(230 233 242 / 88%);
        line-height: 1.46;
        font-size: 0.98rem;
    }
    @media (max-width: 1120px) {
        .m5-member-grid {
            grid-template-columns: 1fr;
        }
    }
    @media (max-width: 980px) {
        .m5-member-card {
            grid-template-columns: 1fr;
        }
        .m5-member-card figure {
            height: auto;
            aspect-ratio: 4 / 3;
            border-right: 0;
            border-bottom: 1px solid rgb(255 255 255 / 12%);
        }
    }
    @media (max-width: 860px) {
        .m5-shell {
            width: min(1200px, 100% - 1.75rem);
        }
        .m5-bio-hero-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
        .m5-bio-hero-image {
            min-height: 0;
            height: clamp(220px, 52vw, 340px);
        }
        .m5-bio-copy {
            padding: 0.95rem;
        }
        .m5-bio-copy h2 {
            margin-top: 0.65rem;
        }
    }
</style>
