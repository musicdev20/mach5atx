        gap: 0.4in;
    }

    .pk-contact {
        display: flex;
        flex-wrap: wrap;
        gap: 0.12in 0.22in;
        align-items: center;
        font-size: 11px;
        color: #fff;
    }

    .pk-contact a {
        color: #fff;
        text-decoration: none;
    }

    .pk-icons {
        display: flex;
        align-items: center;
        gap: 0.1in;
    }

    .pk-icons a {
        display: inline-flex;
        width: 18px;
        height: 18px;
        color: #fff;
    }

    .pk-icons svg {
        fill: currentcolor;
    }

    .pk-tagline {
        margin-top: 0.14in;
        color: #e10600;
        font-size: 14px;
        font-weight: 800;
        letter-spacing: 0.03em;
