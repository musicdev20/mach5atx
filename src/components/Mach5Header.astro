---
const navItems = [
    { label: 'Home', href: '/' },
    { label: 'Tour', href: '/shows' },
    { label: 'Videos', href: '/media' },
    { label: 'Bio', href: '/bio' },
    { label: 'Songs', href: '/the-songs' },
    { label: 'EPK', href: '/press-kit', newTab: true }
];

const currentPath = Astro.url.pathname.replace(/\/+$/, '') || '/';
const isActive = (href) => {
    if (href.includes('#')) return false;
    const path = (href.split('#')[0] || '/').replace(/\/+$/, '') || '/';
    return currentPath === path;
};
---

<header class="m5-top-header">
    <div class="m5-header-art">
        <div class="m5-shell m5-shell-art">
            <nav class="m5-nav" aria-label="Main">
                <ul class="m5-nav-links">
                    {
                        navItems.map((item) => (
                            <li>
                                <a
                                    href={item.href}
                                    target={item.newTab ? '_blank' : undefined}
                                    rel={item.newTab ? 'noopener noreferrer' : undefined}
                                    class={isActive(item.href) ? 'is-active' : undefined}
                                    aria-current={isActive(item.href) ? 'page' : undefined}
                                >
                                    {item.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
                <button class="m5-menu-toggle" data-m5-menu-toggle type="button" aria-expanded="false" aria-label="Toggle menu">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </nav>
        </div>
    </div>
    <div class="m5-shell">
        <div class="m5-mobile-menu" data-m5-mobile-menu hidden>
            <ul>
                {
                    navItems.map((item) => (
                        <li>
                            <a
                                href={item.href}
                                target={item.newTab ? '_blank' : undefined}
                                rel={item.newTab ? 'noopener noreferrer' : undefined}
                                class={isActive(item.href) ? 'is-active' : undefined}
                                aria-current={isActive(item.href) ? 'page' : undefined}
                            >
                                {item.label}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</header>

<style>
    @font-face {
        font-family: 'Speedrace Local';
        src: url('/fonts/speedrace.ttf') format('truetype');
        font-display: swap;
    }

    .m5-top-header {
        position: sticky;
        top: 0;
        z-index: 1200;
        isolation: isolate;
        pointer-events: auto;
    }
    .m5-shell {
        width: min(1600px, 100% - 2rem);
        margin-inline: auto;
    }
    .m5-header-art {
        position: relative;
        width: 100%;
        aspect-ratio: 2048 / 328;
        min-height: 116px;
        max-height: 250px;
        background: url('/images/header/top-header.jpg') center / cover no-repeat;
        border-bottom: 1px solid rgb(225 6 0 / 86%);
        overflow: hidden;
    }
    .m5-header-art::after {
        content: '';
        position: absolute;
        inset: auto 0 0;
        height: 4px;
        background: #e10600;
        box-shadow: 0 0 12px rgb(225 6 0 / 68%);
    }
    .m5-shell-art {
        position: relative;
        height: 100%;
    }
    .m5-nav {
        position: absolute;
        left: 0;
        right: 0;
        bottom: clamp(10px, 1.45vw, 24px);
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .m5-nav-links {
        display: flex;
        gap: clamp(1.1rem, 2.5vw, 3rem);
        list-style: none;
        margin: 0;
        padding: 0;
    }
    .m5-nav-links a {
        color: #f7f9ff;
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 0.04em;
        font-size: clamp(1.3rem, 1rem + 1vw, 2.05rem);
        font-weight: 700;
        font-family: 'Speedrace Local', 'Impact', 'Arial Black', sans-serif;
        text-shadow: -2px 2px 0 rgb(0 0 0 / 82%);
    }
    .m5-nav-links a:hover {
        color: #ff3f4b;
    }
    .m5-nav-links a.is-active {
        color: #ff3f4b;
        text-shadow: 0 0 8px rgb(255 63 75 / 24%);
    }
    .m5-menu-toggle {
        display: none;
        position: absolute;
        top: 0.75rem;
        right: 0.75rem;
        width: 44px;
        height: 44px;
        border-radius: 0.55rem;
        border: 1px solid rgb(255 255 255 / 20%);
        background: rgb(10 15 28 / 78%);
        padding: 0;
        cursor: pointer;
        z-index: 1250;
        pointer-events: auto;
        touch-action: manipulation;
    }
    .m5-menu-toggle span {
        display: block;
        width: 20px;
        height: 2px;
        margin: 4px auto;
        border-radius: 999px;
        background: #f2f6ff;
        transition: transform 180ms ease, opacity 180ms ease;
    }
    .m5-menu-toggle.is-open span:nth-child(1) {
        transform: translateY(6px) rotate(45deg);
    }
    .m5-menu-toggle.is-open span:nth-child(2) {
        opacity: 0;
    }
    .m5-menu-toggle.is-open span:nth-child(3) {
        transform: translateY(-6px) rotate(-45deg);
    }
    .m5-mobile-menu {
        display: none;
        margin-top: 0.55rem;
        background: linear-gradient(180deg, rgb(9 12 24 / 96%) 0%, rgb(6 10 19 / 94%) 100%);
        border: 1px solid rgb(255 255 255 / 13%);
        border-radius: 0.9rem;
        padding: 0.82rem;
        position: relative;
        z-index: 1240;
        pointer-events: auto;
    }
    @media (max-width: 980px) {
        .m5-header-art {
            min-height: 104px;
            max-height: 170px;
            background-position: center;
        }
        .m5-nav {
            position: static;
            height: 100%;
        }
        .m5-nav-links {
            display: none;
        }
        .m5-menu-toggle {
            display: block;
            position: fixed;
            top: calc(env(safe-area-inset-top, 0px) + 0.7rem);
            right: 0.8rem;
            z-index: 2147483646;
        }
        .m5-mobile-menu {
            display: block;
            position: fixed;
            top: calc(env(safe-area-inset-top, 0px) + 3.9rem);
            left: 0.8rem;
            right: 0.8rem;
            margin-top: 0;
            max-height: min(70vh, 560px);
            overflow: auto;
            z-index: 2147483645;
        }
        .m5-mobile-menu ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: grid;
            gap: 0.48rem;
        }
        .m5-mobile-menu a {
            color: #f5f8ff;
            text-decoration: none;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            font-weight: 740;
            font-size: 1.12rem;
            font-family: 'Speedrace Local', 'Impact', 'Arial Black', sans-serif;
            display: inline-flex;
            padding: 0.35rem 0.2rem;
        }
        .m5-mobile-menu a.is-active {
            color: #ff3f4b;
        }
    }
    @media (max-width: 860px) {
        .m5-shell {
            width: min(1600px, 100% - 1rem);
        }
    }
</style>

<script is:inline>
    (() => {
        const initHeaderMenu = () => {
            document.querySelectorAll('.m5-top-header').forEach((header) => {
                if (header.dataset.menuBound === 'true') return;
                const toggle = header.querySelector('[data-m5-menu-toggle]');
                const menu = header.querySelector('[data-m5-mobile-menu]');
                if (!toggle || !menu) return;

                const closeMenu = () => {
                    toggle.classList.remove('is-open');
                    toggle.setAttribute('aria-expanded', 'false');
                    menu.hidden = true;
                };

                toggle.addEventListener('click', (event) => {
                    event.preventDefault();
                    event.stopPropagation();
                    const isOpen = toggle.classList.toggle('is-open');
                    toggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
                    menu.hidden = !isOpen;
                });

                menu.querySelectorAll('a').forEach((link) => {
                    link.addEventListener('click', closeMenu);
                });

                document.addEventListener('click', (event) => {
                    const target = event.target;
                    if (!(target instanceof Element)) return;
                    if (!header.contains(target)) closeMenu();
                });

                closeMenu();
                header.dataset.menuBound = 'true';
            });
        };

        initHeaderMenu();
        document.addEventListener('astro:page-load', initHeaderMenu);
    })();
</script>
